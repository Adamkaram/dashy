{
    "id": "modern-minimal",
    "name": "Modern Minimal",
    "version": "1.0.0",
    "colors": {
        "primary": "#000000",
        "secondary": "#6B7280",
        "accent": "#3B82F6",
        "background": "#FFFFFF",
        "foreground": "#1F2937",
        "muted": "#F3F4F6",
        "success": "#10B981",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "info": "#3B82F6"
    },
    "typography": {
        "fontFamily": {
            "primary": "'Inter', sans-serif",
            "secondary": "'Inter', sans-serif",
            "heading": "'Inter', sans-serif"
        },
        "fontSize": {
            "xs": "0.75rem",
            "sm": "0.875rem",
            "base": "1rem",
            "lg": "1.125rem",
            "xl": "1.25rem",
            "2xl": "1.5rem",
            "3xl": "2rem",
            "4xl": "2.5rem"
        },
        "fontWeight": {
            "light": 300,
            "normal": 400,
            "medium": 500,
            "semibold": 600,
            "bold": 700
        },
        "lineHeight": {
            "tight": 1.25,
            "normal": 1.5,
            "relaxed": 1.75
        }
    },
    "spacing": {
        "xs": "0.5rem",
        "sm": "1rem",
        "md": "1.5rem",
        "lg": "2rem",
        "xl": "3rem"
    },
    "shadows": {
        "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
        "md": "0 4px 6px rgba(0, 0, 0, 0.1)",
        "lg": "0 10px 15px rgba(0, 0, 0, 0.1)",
        "xl": "0 20px 25px rgba(0, 0, 0, 0.1)"
    },
    "borders": {
        "radius": {
            "sm": "4px",
            "md": "8px",
            "lg": "12px",
            "xl": "16px"
        }
    },
    "layout": {
        "containerWidth": "1200px",
        "headerHeight": "64px",
        "footerHeight": "auto",
        "sidebarWidth": "256px",
        "gridGap": "1.5rem"
    },
    "components": {
        "button": {
            "borderRadius": "8px",
            "padding": "0.625rem 1.5rem"
        },
        "card": {
            "borderRadius": "12px",
            "shadow": "md"
        }
    }
}